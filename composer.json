{
    "name": "rahpt/ci4-module-tenancy",
    "description": "Multi-tenancy support for CodeIgniter 4 modules",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "codeigniter",
        "codeigniter4",
        "modules",
        "tenancy",
        "multi-tenant",
        "rahpt"
    ],
    "homepage": "https://github.com/rahpt/ci4-module-tenancy",
    "support": {
        "issues": "https://github.com/rahpt/ci4-module-tenancy/issues",
        "source": "https://github.com/rahpt/ci4-module-tenancy",
        "docs": "https://github.com/rahpt/ci4-module-tenancy#readme"
    },
    "authors": [
        {
            "name": "Rahpt",
            "email": "ci4-module@rah.pt",
            "homepage": "https://github.com/rahpt",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "rahpt/ci4-module": "*"
    },
    "autoload": {
        "psr-4": {
            "Rahpt\\Ci4ModuleTenancy\\": "src/"
        },
        "files": [
            "src/Helpers/tenant_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rahpt\\Ci4ModuleTenancy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html build/coverage"
    },
    "extra": {
        "codeigniter4": {
            "discover": [
                "Rahpt\\Ci4ModuleTenancy\\Config\\Registrar"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}